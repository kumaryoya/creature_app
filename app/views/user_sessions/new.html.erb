<%= form_with url: login_path, method: :post do |f| %>
  <div>
    <%= f.label :email, "email", class: "bg-primary" %><br>
    <%= f.email_field :email, class: "textarea textarea-primary textarea-xs w-full max-w-xs" %>
  </div>
  <div>
    <%= f.label :password, "password", class: "bg-secondary" %><br>
    <%= f.password_field :password, class: "textarea textarea-secondary textarea-xs w-full max-w-xs" %>
  </div>
  <div>
    <%= f.submit "ログイン", class: "btn btn-accent" %><br>
  </div>
<% end %>
<div>
  <%= link_to "forgot_password", "#", class: "btn btn-active btn-link" %>
</div>
<div>
    <%= link_to "signup", new_user_path, class: "btn btn-active btn-link" %>
</div>